<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.skillbranch.devintensive.workmanagerdemonstrativerepo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".notifications.LoginToNotifByFirebase">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".notifications.FirebaseAuthNotifActivity"/>
        <activity
            android:name=".notifications.NotificationsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".service.codetutor.FakeRemoteActivity"/>
        <activity
            android:name=".service.codetutor.ServiceActivityTut"
            android:screenOrientation="portrait"/>
        <activity android:name=".broadcastreceiver.ActivityForBroadcast"/>
        <activity
            android:name=".service.ServiceActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".workmanager.SingleWorkActivity"
            android:screenOrientation="portrait"/>

        <service android:name=".service.MusicService" />
        <service android:name=".service.codetutor.MyService" />
    </application>

</manifest>